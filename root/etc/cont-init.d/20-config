#!/usr/bin/with-contenv bash

if [ -d /usr/lib/unifi-tmp ]; then
    echo "New container detected. Setting up app folder and fixing permissions."
    mv /usr/lib/unifi-tmp /usr/lib/unifi
    chown -R abc:abc /usr/lib/unifi
fi

# create our folders
mkdir -p \
	/config/{data,logs,run}


# create symlinks for config
symlinks=( \
/usr/lib/unifi/data \
/usr/lib/unifi/logs \
/usr/lib/unifi/run )

for i in "${symlinks[@]}"
do
[[ -L "$i" && ! "$i" -ef /config/"$(basename "$i")"  ]] && unlink "$i"
[[ ! -L "$i" ]] && ln -s /config/"$(basename "$i")" "$i"
done

# permissions
chown -R abc:abc \
	/config \
	/usr/lib/unifi
